<form class="{{cssClass}}" autocomplete="off">
  <header class="sheet-header">
    <img class="item-img" src="{{item.img}}" data-edit="img" title="{{item.name}}" width="100" heigh="100"/>
    <div class="header-fields">
      <h1 class="arme-name"><input type="text" name="name" value="{{item.name}}"></h1>   
    </div>
  </header>
  
  {{!-- Sheet Body --}}
  <section class="sheet-body">

  {{!-- Sheet Tab Navigation --}}
  <nav class="sheet-tabs tabs" data-group="primary">
    <a class="item" data-tab="description">Description</a>
    <a class="item" data-tab="attributes">Attributes</a>
  </nav>

  {{!-- Sheet Body --}}
  <section class="sheet-body">

    {{!-- Description Tab --}}
    <div class="tab" data-group="primary" data-tab="description">
      {{editor content=data.description target="data.description" rollData=rollData button=true owner=owner editable=editable}}
    </div>

    {{!-- Attributes Tab --}}
    <div class="tab attributes" data-group="primary" data-tab="attributes">
    <div class="category">
      <div class="category-title">Attributs</div>
      <div class="category-body">
        <div class="category-element">
          <label for="data.type">Type d'arme</label>
          <select name="data.type" id="data.type" class="">
            {{#select data.type}}
            {{selectOptions munType selected=value nameAttr=key}}
            {{/select}}
          </select>
        </div>
        <div class="category-element">
          <label for="data.dammage">Quantité</label>
          <input type="text" name="data.quantity" value="{{data.quantity}}" />
        </div>
      </div>
      <div class="category-body">
        <div class="category-element">
          <table>
          	<tr>
          		<th colspan=2>Dégâts supplémentaire</th>
          	</tr>
          	<tr>
          		<th>Nb D6</th>
          		<th>Nb tier</th>
          	</tr>
          	<tr>
          		<td><input type="number" name="data.damage.CodeD" value="{{data.damage.CodeD}}"></td>
          		<td><input type="number" name="data.damage.Tier" value="{{data.damage.Tier}}"></td>
          	</tr>
          </table>
	      </div>
      </div>
    </div>

    </div>


    </div>
  </section>
</form>
