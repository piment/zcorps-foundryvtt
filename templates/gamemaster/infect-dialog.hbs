<form>
    <h3>Ajouter une Infection (morsure)</h3>
    <table>
        <thead>
            <tr>
                <th>Personnage</th>
                <th>%</th>
                <th>Temps</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {{#each actors as |actor key|}}
            <tr>
                <td class="actor_name" data-actor_id="{{actor.data._id}}">{{actor.data.name}}</td>
                <td>
                    <div>
                        <input type="text" name="infectPourcentToAdd" id="infectPourcentToAdd_{{actor.data._id}}" value="0" data-actor_id="{{actor.data._id}}" data-value="infectPourcentToAdd"/>
                    </div>
                </td>
                <td>
                    <div>
                        <input type="text" name="infectTimeToAdd" id="infectTimeToAdd_{{actor.data._id}}" value="0" data-actor_id="{{actor.data._id}}" data-value="infectTimeToAdd"/>
                    </div>
                </td>
                <td>
                	<div>
                        <button class="gm_add_infect">+</button>
                	</div>
                </td>
            </tr>
        	{{#each actor.data.flags.zcorps.addedInfect as |infect key|}}
            <tr>
	              <td class="actor_name" data-actor_id="{{actor.data._id}}"></td>
            	  <td>{{infect.pourcent}}</td>
            	  <td>{{infect.time}}</td>
            	  <td><div><a class="gm_supp_infect" data-key="{{key}}"><i class="fas fa-trash"></i></button></a></td>
            </tr>
            {{/each}}
            {{/each}}
        </tbody>
    </table>
</form>