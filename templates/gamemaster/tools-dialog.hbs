<form>
    <h1>GAME MASTER TOOLS V0.0.1</h1>
    <h3>Edition des points de personnage / cojones</h3>
    <ol>
        {{#each actors as |actor keyActor|}}
            
            <li class="form-group">
                <p>{{actor.name}}</p>
                <div>
                    <h5>point de personnage</h5>
                    <input type="text" name="xp" value="0" data-actor_id="{{actor._id}}" data-value="xp"/>
                    <button class="gm_validate_value">{{localize 'ZCORPS.Add'}}</button>
                </div>
                <div>
                    <h5>point de cojones</h5>
                    <input type="text" name="cojones" value="0" data-actor_id="{{actor._id}}" data-value="cojones"/>
                    <button class="gm_validate_value">{{localize 'ZCORPS.Add'}}</button>
                </div>
            </li>
            
        {{/each}}
    </ol>
    <hr>
    <div>
        <h3>Ajouter une nouvelle compétence</h3>
        <div class="form-group">
            <div>
                <span>Personnage</span>
                <select name="actor" id="selectedActor">
                    {{#each actors as |actor key|}}
                    <option value="{{actor._id}}">{{actor.name}}</option>
                    {{/each}}
                </select>
            </div>
            <div>
                <span>Caractéristique</span>
                <select name="caracteristic" id="caracteristic">
                    {{#each caracteristics as |caracteristic key|}}
                    <option value="{{key}}">{{caracteristic}}</option>
                    {{/each}}
                </select>
            </div>
            
            <input type="text" name="skill" id="skill" />
            <button class="gm_add_skill">Valider</button>
        </div>
    </div>
</form>